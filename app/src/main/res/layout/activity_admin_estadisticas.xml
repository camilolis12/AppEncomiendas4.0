<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/layoutAdminEstadisticas"
        android:orientation="vertical"
        android:padding="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Estadísticas Generales"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="32dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTotalUsuarios"
            android:text="Total de usuarios: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtTotalPaquetesGlobal"
            android:text="Total de paquetes: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtPaquetesEntregadosGlobal"
            android:text="Paquetes entregados: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtPaquetesExpress"
            android:text="Paquetes Express: 0"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_500"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:id="@+id/txtIngresoTotal"
            android:text="Ingreso total: $0 COP"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtCalificacionPromedioGlobal"
            android:text="Calificación promedio: 0.0 ⭐"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/purple_500"
            android:layout_marginVertical="16dp"/>

        <TextView
            android:text="Top 5 - Usuarios con más compras"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/listViewMasValor"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:text="Paquetes Mejor Calificados"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/purple_500"
            android:layout_marginBottom="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ListView
            android:id="@+id/listViewMejorCalificados"
            android:layout_width="match_parent"
            android:layout_height="150dp"/>

    </LinearLayout>

</ScrollView>
