<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9FAFB">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="32dp"
        android:background="@color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarFormulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/purple_500"
            android:title="Solicitud de EnvÃ­o"
            android:titleTextColor="@android:color/white"
            android:elevation="4dp"/>

        <!-- Remitente -->
        <TextView
            android:text="Datos del Remitente"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/purple_500"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRemitenteNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TelÃ©fono">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRemitenteTelefono"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DirecciÃ³n">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtRemitenteDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Destinatario -->
        <TextView
            android:text="Datos del Destinatario"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDestinatarioNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="TelÃ©fono">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDestinatarioTelefono"
                android:inputType="phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="DirecciÃ³n">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtDestinatarioDireccion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/btnUsarFavoritos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Usar direcciÃ³n favorita"
            android:layout_marginTop="4dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"/>

        <!-- Datos del Paquete -->
        <TextView
            android:text="Datos del Paquete"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <!-- TamaÃ±o -->
        <TextView
            android:text="TamaÃ±o del paquete:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Spinner
            android:id="@+id/spinnerTamano"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/tamano_paquete"/>

        <!-- Peso -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Peso (kg)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtPeso"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Longitud -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud (cm)">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edtLongitud"
                android:inputType="numberDecimal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- MÃ©todo de pago -->
        <TextView
            android:text="MÃ©todo de pago:"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/radioGroupPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/radioPagoTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tarjeta de crÃ©dito"/>

            <RadioButton
                android:id="@+id/radioPagoTransferencia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transferencia bancaria"/>

            <RadioButton
                android:id="@+id/radioPagoEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectivo"/>

        </RadioGroup>

        <!-- OpciÃ³n Express / Premium -->
        <LinearLayout
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Switch
                android:id="@+id/switchExpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servicio Express / Premium" />

            <TextView
                android:id="@+id/txtTarifaExpress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Tarifa: $0"
                android:visibility="gone"/>
        </LinearLayout>

        <!-- BotÃ³n -->
        <Button
            android:id="@+id/btnRegistrar"
            android:text="Registrar EnvÃ­o"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/txtRadicadoGenerado"
            android:layout_marginTop="12dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnVerFactura"
            android:text="ðŸ“„ Ver Factura PDF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:visibility="gone" />

        <Button
            android:id="@+id/btnCompartir"
            android:text="Compartir Solicitud"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/purple_500"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"/>

    </LinearLayout>
</ScrollView>
